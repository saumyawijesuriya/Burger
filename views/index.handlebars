
<h1>EAT - DA - BURGER!</h1>

{{!-- <h2>Cats that are not sleepy!</h2> --}}
<div id="d1">
    <ul>
  {{#each burgers}}
    {{#unless devour}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

{{!-- <h2>burgers that are devour!</h2> --}}
<br>
<br>
<div id="d2">
<ul>
  {{#each burgers}}
    {{#if devour}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devour">Devour it</label><br>
    <input type="radio" name="devour" value="1" checked> devour!<br>
    {{!-- <input type="radio" name="devour" value="0"> Awake --}}
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>